		<style lang='scss' is:global>
			recent-search {
				max-width: 1200px;
				margin: 0 auto;
				display: block;

				&:not(:defined) {
					.skeleton {
						background: #eee;
						height: 1.5rem;
						margin: 0.5rem 0;
						border-radius: 0.25rem;
						animation: pulse 1.5s infinite;
					}
				}

				.row {
					display: grid;
					grid-template-columns: 1fr 1fr 1fr;
					gap: 1rem;
				}

				.search-item {
					border: 1px solid #ddd;
					border-radius: 8px;
					display: flex;
					gap: 0.5rem;
					background: var(--brand-950);

					img {
						width: 25%;
						height: auto;
						border-radius: 4px;
						aspect-ratio: 1/1;
					}

					.search-content {
						padding: 1rem;

						h5 {
							margin: 0 0 0.25rem 0;
							font-size: 1.1rem;
							color: var(--brand-300);
						}

						p {
							margin: 0;
							color: var(--brand-200);
							font-size: 0.9rem;
						}
					}
				}
			}
