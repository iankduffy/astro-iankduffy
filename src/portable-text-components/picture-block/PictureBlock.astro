---
const {node } = Astro.props
import {urlForImage} from '../../lib/urlForImage'
import ImageLightBox from '../../custom-web-components/ImageLightBox.astro'
import CSS from './styles.module.scss'
const url = urlForImage(node.image).fit('fill').width(1000).quality(80).auto('format').url()
---

<ImageLightBox>
    <figure class:list={[CSS.figure]}>
        <img src={url} alt={node.alt}  width="1000" height="600"/>
        <figcaption>{node.alt}</figcaption>
    </figure>
</ImageLightBox>