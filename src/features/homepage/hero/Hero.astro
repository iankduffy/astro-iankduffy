---
import CSS from './styles.module.scss';
---

<section class:list={[CSS.container]}>
	<div class:list={['container', CSS.content]}>
		<div class:list={['w-full']}>
			<h1 class:list={[CSS.heroText]}>Hello I am Ian Duffy<br /></h1>
			<p class:list={CSS.subText}
				>Senior Software Engineer who strives to build performant websites.
			</p>
		</div>
		<div class:list={[CSS.imageContainer]}>
			<div class:list={[CSS.image]}>
				<img
					src='https://cdn.sanity.io/images/hpnwtus3/production/0a51a70c16f70c095082cdf16915067c9530dc47-600x600.png?w=300&h=300&q=80&fit=fill&auto=format'
					alt='Ian Duffy'
					width='500'
					height='500'
					loading='eager'
					fetchpriority='high'
				/></div
			>
		</div>
	</div>
</section>
